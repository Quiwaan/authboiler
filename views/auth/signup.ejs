<h2>Sign up!</h2>



<div class="row">
<form action="/auth/signup" method="POST">
	<div class="row">
	<div class="col s12 input-field">
		<label>first name</label>
		<input type="text" name="firstname" placeholder="Your firstname" value="<%= previousData ? previousData.firstname : '' %>">
	</div>
	</div>
		<div class="row">
		<div class="col s12 input-field">
			<label>last name</label>
			<input type="text" name="lastname" placeholder="Your lastname" value="<%= previousData ? previousData.lastname : '' %>">
		</div>
		</div>

		<div class="row">
		<div class="col s12 input-field">
			<label>Username</label>
			<input type="text" name="username" placeholder="Your Username" value="<%= previousData ? previousData.username : '' %>">
		</div>
		</div>

		<div class="row">
		<div class="col s12 input-field">
			<label>password</label>
			<input type="password" name="password" placeholder="your password" value="<%= previousData ? previousData.password : '' %>">
		</div>
		</div>

		<div class="row">
		<div class="col s12 input-field">
			<label>password verification </label>
			<input type="password" name="password_verify" placeholder="your password again" value="<%= previousData ? previousData.password_verify : '' %>">
		</div>
		</div>


	    <div class="row">
		    <div class="col s12 input-field">
				<label>Email</label>
				<input type="email" name="email" placeholder="your email" value="<%= previousData ? previousData.email : '' %>">
			</div>
		</div>


	    <div class="row">
		    <div class="col s12 input-field">
				<label>Profile Pic Url:</label>
				<input type="url" name="image" placeholder="Pic goes here">
			</div>
		</div>

      <div class="row">
        <div class="input-field col s12">
          <textarea class="materialize-textarea"></textarea>
          <label>Bio</label>
        </div>
      </div>

     <div class="row">
		    <div class="col s3 input-field">
				<label>Birthdate</label>
				<input type="text" id="dob" class="datepicker">
			</div>
		</div>
    


 		<button class="btn waves-effect waves-light" type="submit" name="action">Submit
    		<i class="material-icons right">send</i>
  </button>
        
</form>
</div>